{
  "name": "soypache.co",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "description": "Latest website sources, notes and such.",
  "author": {
    "url": "https://soypache.co",
    "name": "Alvaro Cabrera",
    "email": "pateketrueke@gmail.com"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run build -- -w",
    "dist": "npm run build --",
    "build": "mortero -dMn -Xlib -ecss.less -I.gitignore"
  },
  "mortero": {
    "rename": [
      "**/pages/!(index).html:{basedir}/{name}/index.html",
      "**/{pages,resources}/**:{filepath/2}",
      "**/index.(css|js):{basedir}{ext}",
      "**/404.html:{filepath/1}"
    ],
    "options": {
      "frontMatter": false,
      "modules": true,
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }
    }
  },
  "devDependencies": {
    "kramed": "^0.5.6",
    "less": "^3.9.0",
    "less-plugin-autoprefix": "^2.0.0",
    "mortero": "0.0.17",
    "pug": "^2.0.0-beta11"
  }
}
