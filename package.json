{
  "name": "soypache.co",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "description": "Latest website sources, notes and such.",
  "author": {
    "url": "https://soypache.co",
    "name": "Alvaro Cabrera",
    "email": "pateketrueke@gmail.com"
  },
  "scripts": {
    "dev": "tarima watch -dp 3001",
    "dist": "tarima -fqe production"
  },
  "tarima": {
    "from": "src",
    "public": "build",
    "filter": [
      "!**/lib/**"
    ],
    "rename": [
      "**/!(index).html:{basedir}/{name}/index.html",
      "**/{pages,resources}/**:{fullpath/2}",
      "**/index.(css|js):{basedir}.{ext}"
    ],
    "ignoreFiles": [
      ".gitignore"
    ],
    "devPlugins": [
      "tarima-lr"
    ],
    "plugins": [
      "talavera"
    ],
    "bundleOptions": {
      "frontMatter": false,
      "extensions": {
        "js": "es6",
        "css": "less"
      },
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }
    }
  },
  "devDependencies": {
    "buble": "^0.19.6",
    "coffeescript": "^2.3.2",
    "kramed": "^0.5.6",
    "less": "^3.9.0",
    "less-plugin-autoprefix": "^2.0.0",
    "pug": "^2.0.0-beta11",
    "rollup": "^1.1.2",
    "talavera": "^0.6.2",
    "tarima": "^4.2.8",
    "tarima-lr": "^0.4.4"
  }
}
