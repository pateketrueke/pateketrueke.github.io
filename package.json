{
  "name": "soypache.co",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "description": "Latest website sources, notes and such.",
  "author": {
    "url": "https://soypache.co",
    "name": "Alvaro Cabrera",
    "email": "pateketrueke@gmail.com"
  },
  "scripts": {
    "watch": "tarima watch -dp 3001 -P localhost:8081",
    "build": "tarima -fqe production"
  },
  "tarima": {
    "from": "src",
    "public": "build/www",
    "filter": [
      "!_*",
      "!**/_*",
      "!**/_*/**"
    ],
    "bundle": [
      "**/index.js"
    ],
    "rename": [
      "**:{fullpath/1}",
      "**/index.(css|js):{basedir}.{ext}"
    ],
    "ignoreFiles": [
      ".gitignore"
    ],
    "devPlugins": [
      "tarima-lr"
    ],
    "plugins": [
      "talavera"
    ],
    "pluginOptions": {
      "talavera": {
        "dest": "www/images",
        "public": "build/www"
      }
    },
    "bundleOptions": {
      "bundleCache": true,
      "entryCache": true,
      "extensions": {
        "md": false,
        "js": "es6",
        "css": "less"
      },
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }
    }
  },
  "devDependencies": {
    "buble": "^0.19.5",
    "coffeescript": "^2.3.2",
    "less": "^3.8.1",
    "less-plugin-autoprefix": "^2.0.0",
    "pug": "^2.0.3",
    "rollup": "^0.66.6",
    "talavera": "^0.6.0",
    "tarima": "^4.2.2",
    "tarima-lr": "^0.4.4"
  }
}
