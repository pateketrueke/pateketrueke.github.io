{
  "name": "soypache.co",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "description": "Latest website sources, notes and such.",
  "author": {
    "url": "https://soypache.co",
    "name": "Alvaro Cabrera",
    "email": "pateketrueke@gmail.com"
  },
  "scripts": {
    "dev": "npm run build -- -wdp 3001",
    "dist": "npm run build -- -fq",
    "build": "mortero -I.gitignore"
  },
  "mortero": {
    "bundle": [
      "**/index.js",
      "**/scripts/*.js"
    ],
    "filter": [
      "!**/lib/**"
    ],
    "rename": [
      "src/**:{filepath/1}",
      "**/index.(css|js):{basedir}{ext}",
      "**/{pages,resources}/**:{filepath/1}",
      "**/!(index).html:{basedir}/{name}/index.html"
    ],
    "options": {
      "kramed": {
        "highlight": true
      },
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }
    }
  },
  "devDependencies": {
    "kramed": "^0.5.6",
    "less": "^3.13.1",
    "less-plugin-autoprefix": "^2.0.0",
    "mortero": "^0.0.46",
    "pug": "^2.0.4"
  }
}
